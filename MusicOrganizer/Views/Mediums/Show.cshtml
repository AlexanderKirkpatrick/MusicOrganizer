@{
  Layout = "_Layout";
}

@using MusicOrganizer.Models;

<h3>Here are all the albums in this medium:</h3>

<ol>
@foreach (Album album in @Model["albums"])
{
  <li><a href='/mediums/@Model["medium"].Id/albums/@album.Id'>@album.Description</a></li>
}
</ol>

<p><a href='/mediums/@Model["medium"].Id/albums/new'>Add a new album</a></p>
<p><a href='/mediums'>Return to medium list</a></p>
<p><a href='/'>Return to Main Page</a></p>